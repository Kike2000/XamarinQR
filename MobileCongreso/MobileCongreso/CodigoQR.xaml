<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileCongreso.CodigoQR"
             Icon="miagenda.png">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#f7cd6a" Padding="24" CornerRadius="0">
                <Label Text="Mi Agenda" HorizontalTextAlignment="Center" TextColor="White" FontSize="30"/>
            </Frame>
            <ListView x:Name="misEventos" ItemSelected="misEventos_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Height="40">
                            <StackLayout Orientation="Horizontal" Padding="20">
                                <StackLayout HorizontalOptions="StartAndExpand" Spacing="4">
                                    <Label Text="{Binding Nombre}"></Label>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>