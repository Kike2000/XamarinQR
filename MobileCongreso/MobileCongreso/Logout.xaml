<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileCongreso.Logout"                      
             Icon="logout.png">
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">

            <Image  x:Name="personImage" WidthRequest="180" HeightRequest="180"></Image>


            <Entry VerticalOptions="Center" x:Name="txtNombre" Placeholder="Correo" TextColor="Black" FontSize="15" IsEnabled="False" HorizontalTextAlignment="Center" ></Entry>
            <Entry VerticalOptions="Center" x:Name="txtLocalizacion" Placeholder="Contraseña" TextColor="Black" IsEnabled="False" FontSize="15" HorizontalTextAlignment="Center" ></Entry>

            <Button BorderWidth="1.5" BackgroundColor="Gray" TextColor="white" CornerRadius="50" BorderColor="White" Text="Logout" Clicked="OnLogout" VerticalOptions="CenterAndExpand"  x:Name="logoutButton" Margin="20,20,20,20"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>